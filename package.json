{
  "name": "@littlebearapps/git-pr-manager",
  "version": "1.4.0",
  "description": "Production-ready git workflow automation for GitHub with Claude Code integration",
  "main": "dist/index.js",
  "bin": {
    "gpm": "dist/index.js"
  },
  "files": [
    "dist/",
    "docs/",
    "quickrefs/",
    "README.md",
    "CLAUDE.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src tests --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test",
    "postinstall": "node dist/scripts/postinstall.js"
  },
  "keywords": [
    "git",
    "github",
    "workflow",
    "automation",
    "ci",
    "pr",
    "claude-code",
    "ai-agent",
    "cli",
    "devops",
    "developer-tools"
  ],
  "documentation": {
    "guides": "docs/guides/",
    "aiAgent": "docs/guides/AI-AGENT-INTEGRATION.md",
    "githubActions": "docs/guides/GITHUB-ACTIONS-INTEGRATION.md",
    "claudeCode": "CLAUDE.md",
    "quickrefs": "quickrefs/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/littlebearapps/git-pr-manager"
  },
  "bugs": {
    "url": "https://github.com/littlebearapps/git-pr-manager/issues"
  },
  "homepage": "https://github.com/littlebearapps/git-pr-manager#readme",
  "author": "Nathan Schram <nathan@littlebearapps.com>",
  "license": "MIT",
  "dependencies": {
    "@octokit/plugin-throttling": "^8.0.0",
    "@octokit/rest": "^20.0.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "lru-cache": "^10.0.0",
    "ora": "^7.0.1",
    "package-json": "^10.0.0",
    "prompts": "^2.4.2",
    "semver": "^7.5.4",
    "simple-git": "^3.21.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
